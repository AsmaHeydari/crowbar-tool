module Guard;

data Spec = ObjInv(Bool) | Ensures(Bool) | Requires(Bool) | WhileInv(Bool);


class C{
	Int i = 0;
    
    [Spec : Ensures(this.i > 0)]
    Unit msucc(Fut<Int> f, Fut<Unit> g){
    	await f?;
    	await f? & g?;
    	await g? & i >= 0;
    	this.i = this.i + 1;
    }
    [Spec : Ensures(this.i > 0)]
    Unit mfail(Fut<Int> f, Fut<Unit> g){
    	await f?;
    	await f? & g?;
    	await g? & i >= 0;
    	this.i = this.i - 1;
    }
}

